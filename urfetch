#!/bin/sh
# urfetch - a wee lil fetch that does what u want and nothing else
# based off of ufetch
## string to show your colors
colstr='░▓█▓'
## DEFINE COLORS
# probably don't change these
if [ -x "$(command -v tput)" ]; then
	bold="$(tput bold)"
	black="$(tput setaf 0)"
	red="$(tput setaf 1)"
	green="$(tput setaf 2)"
	yellow="$(tput setaf 3)"
	blue="$(tput setaf 4)"
	magenta="$(tput setaf 5)"
	cyan="$(tput setaf 6)"
	white="$(tput setaf 7)"
	reset="$(tput sgr0)"
fi
# you change the order or your colors here
color="${black}${colstr}${red}${colstr}${green}${colstr}${yellow}${colstr}${blue}${colstr}${magenta}${colstr}${cyan}${colstr}${white}${colstr}"
# style rules for output - change until your happy
nc="${reset}${bold}${blue}"         # user and hostname
lc="${reset}${magenta}"                # info
c0="${reset}${cyan}"                # ascii art
ft="${reset}${bold}${magenta}"     # flavortext style
# flavor text
## list of options
flavor=("${ft}urFetch is good Fetch!${reset}"
	    "${ft}urFetch is great Fetch!${reset}"
	    "${ft}urFetch is best Fetch!${reset}")
##copy and paste the following line where ever youd like a random flavortext
##${flavor[$(($RANDOM % ${#flavor[@]}))]}
## OUTPUT
### reaarange, change ascii art, change or add flavor text, or add or remove colorbars here
### replace windwosLmaos with your distro, you should know it by now
### if you know your shell, an hostname and know they won't change you can hard code them to make this a bit quicker
### this ascii art came from open https://manytools.org/hacker-tools/ascii-banner/
cat <<EOF
${c0}                 ${nc}$(echo $USER)${ic}@${nc}$(cat /etc/hostname)${reset}
${c0}   \│/┬ ┬┬─┐\│/  ${lc}windwosLmaos${reset} 
${c0}   ─ ─│ │├┬┘─ ─  ${lc}$(uname -sr)${reset} 
${c0}   /│\└─┘┴└─/│\  ${lc}$(uptime -p)${reset}
${c0} ┌─┐┌─┐┌┬┐┌─┐┬ ┬ ${lc}$(basename "$SHELL")${reset}
${c0} ├┤ ├┤  │ │  ├─┤   
${c0} └  └─┘ ┴ └─┘┴ ┴ ${color}${reset} 
${c0}    (changeme)   ${flavor[$(($RANDOM % ${#flavor[@]}))]}
${c0}                 ${color}${reset}
EOF
